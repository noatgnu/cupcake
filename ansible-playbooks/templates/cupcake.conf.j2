# CUPCAKE Environment Configuration
# Generated by Ansible - Do not edit manually

# Core Django settings
DEBUG={{ django_debug | lower }}
SECRET_KEY={{ django_secret_key }}
ENV=production
ALLOWED_HOSTS={{ django_allowed_hosts }}

# PostgreSQL settings
POSTGRES_DB={{ postgres_db }}
POSTGRES_USER={{ postgres_user }}
POSTGRES_PASSWORD={{ postgres_password }}
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis settings
REDIS_HOST=localhost
REDIS_PORT={{ redis_port }}
REDIS_DB=0
REDIS_PASSWORD=

# Storage and media settings
MEDIA_ROOT={{ cupcake_home }}/media
STATIC_ROOT={{ cupcake_home }}/staticfiles
BACKUP_DIR={{ cupcake_home }}/backups

# Whisper.cpp settings
WHISPERCPP_PATH={{ cupcake_home }}/whisper.cpp/build/bin/main
WHISPERCPP_DEFAULT_MODEL={{ cupcake_home }}/whisper.cpp/models/ggml-base.en.bin
WHISPERCPP_THREAD_COUNT={{ ansible_processor_vcpus | default(4) }}

# Feature flags
USE_WHISPER=True
USE_OCR=True
USE_LLM=False
USE_COTURN=False

# CORS and frontend settings
CORS_ORIGIN_WHITELIST=http://localhost:4200,http://localhost:8000,http://{{ ansible_fqdn | default(ansible_hostname) }}
FRONTEND_URL=http://{{ ansible_fqdn | default(ansible_hostname) }}

# Email settings (disabled by default)
NOTIFICATION_EMAIL_FROM=
AWS_SES_ACCESS_KEY_ID=
AWS_SES_SECRET_ACCESS_KEY=
AWS_SES_REGION_NAME=us-east-1
AWS_SES_REGION_ENDPOINT=email.us-east-1.amazonaws.com

# Optional integrations (disabled by default)
PROTOCOLS_IO_ACCESS_TOKEN=
SLACK_WEBHOOK_URL=
COTURN_SERVER=localhost
COTURN_PORT=3478
COTURN_SECRET=

# Instrument booking settings
ALLOW_OVERLAP_BOOKINGS=True
DEFAULT_SERVICE_LAB_GROUP="MS Facility"

# LLaMA settings (disabled by default since USE_LLM=False)
LLAMA_BIN_PATH=
LLAMA_DEFAULT_MODEL=

# Fix multiprocessing issues for ontology loading
MULTIPROCESSING_FORCE_SINGLE_THREADED=1
PRONTO_THREADS=1
PYTHONDONTWRITEBYTECODE=1